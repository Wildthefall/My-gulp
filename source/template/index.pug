doctype html
html
    include common/_head
    body
        <!--[if lt IE 7]>
        <p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
        <![endif]-->
        .wrap

            .main-header
                button.login-btn Авторизоваться

            .autor-card-container
                .autor-card
                    .autor-card__front-side
                        .about-autor
                            include common/_autor-info
                            .socials
                        .index-menu
                            ul.index-menu__list
                                li.index-menu__item
                                    a(href="#").index-menu__link Мои работы
                                li.index-menu__item
                                    a(href="#").index-menu__link Обо мне
                                li.index-menu__item
                                    a(href="#").index-menu__link Блог
                    .autor-card__back-side
                        form(method='get' action='#').login-form
                            h2.login-form__title Авторизуйтесь
                            .login-form__field-container
                                input(type='text' placeholder='Логин' required).login-form__login
                            .login-form__field-container.login-form__field-container--password
                                input(type='text' placeholder='Пароль' required).login-form__password
                            input(type='checkbox' id='captcha' required).captcha__checkbox
                            label(for='captcha').captcha__checkbox-label Я человек
                            h2.captcha__question Вы точно не робот?
                            .login-form__radio-container
                                input(type='radio' name='captcha-radio' id='captcha-radio-yes' required).captcha__radio
                                label(for='captcha-radio-yes').captcha__radio-label Да
                                input(type='radio' name='captcha-radio' id='captcha-radio-no' required).captcha__radio
                                label(for='captcha-radio-no').captcha__radio-label Не уверен
                        .login-form__links
                            a(href='#').login-form-link На главную
                            input(type='submit' value='Войти').login-form-link

            .main-footer
